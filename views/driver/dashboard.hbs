<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Driver Dashboard</title>
  <style>
    /* Reset default browser styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Body styling */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #000;
      /* Black background */
      color: #fff;
      /* White text */
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    /* Navbar styling */
    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background-color: #121212;
      /* Slightly lighter black for contrast */
      padding: 15px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #333;
      /* Subtle border for separation */
    }

    .navbar h1 {
      font-size: 1.5rem;
      margin: 0;
      letter-spacing: 1px;
    }

    .navbar .logout-btn {
      background-color: #ff4d4d;
      /* Pale red for logout button */
      color: white;
      font-size: 1rem;
      padding: 8px 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .navbar .logout-btn:hover {
      background-color: #e53935;
      /* Darker red on hover */
    }

    /* Dashboard container */
    .dashboard-container {
      background-color: #121212;
      /* Slightly lighter black for contrast */
      border-radius: 15px;
      padding: 40px;
      width: 100%;
      max-width: 800px;
      text-align: center;
      box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
      /* Subtle white glow */
      margin-top: 80px;
      /* Space for the navbar */
    }

    /* Sections */
    .section {
      margin-bottom: 30px;
    }

    .section h2 {
      font-size: 1.5rem;
      margin-bottom: 15px;
      letter-spacing: 1px;
    }

    /* Order list */
    ul {
      list-style: none;
      padding: 0;
    }

    ul li {
      background-color: #222;
      margin-bottom: 10px;
      padding: 15px;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    ul li:hover {
      background-color: #333;
    }

    ul li a {
      color: #64b5f6;
      /* Soft blue accent for links */
      text-decoration: none;
      font-size: 1rem;
      transition: color 0.3s ease;
    }

    ul li a:hover {
      color: #ff6f61;
      /* Accent color on hover */
    }

    /* No orders message */
    .no-orders {
      font-size: 1.2rem;
      color: #aaa;
    }

    /* Form styling */
    form {
      margin-top: 10px;
      display: inline-block;
    }

    input[type="file"] {
      margin-right: 10px;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <div class="navbar">
    <h1>Welcome, {{driver}}!</h1>
    <form action="/driver/logout" method="POST" style="display: inline;">
      <button type="submit" class="logout-btn">Logout</button>
    </form>
  </div>

  <!-- Main Content -->
  <div class="dashboard-container">
    <h1>Driver Dashboard</h1>

    <!-- Available Orders Section -->
    <div class="section">
      <h2>Available Orders</h2>
      <ul>
        {{#if availableOrders.length}}
        {{#each availableOrders}}
        <li>
          <strong>Order ID:</strong> {{this._id}}<br>
          <strong>Customer:</strong> {{this.customerName}}<br>
          <strong>Address:</strong> {{this.deliveryAddress}}<br>
          <form action="/driver/orders/{{this._id}}/assign" method="POST" style="display: inline;">
            <button type="submit">Pick This Order</button>
          </form>
        </li>
        {{/each}}
        {{else}}
        <li class="no-orders">No available orders at this time.</li>
        {{/if}}
      </ul>
    </div>

    <!-- Picked-Up Orders Section -->
    <div class="section">
      <h2>Picked-Up Orders</h2>
      <ul>
        {{#if pickedUpOrders.length}}
        {{#each pickedUpOrders}}
        <li>
          <strong>Order ID:</strong> {{this._id}}<br>
          <strong>Customer:</strong> {{this.customerName}}<br>
          <strong>Address:</strong> {{this.deliveryAddress}}<br>
          <form action="/driver/orders/{{this._id}}/fulfill" method="POST" enctype="multipart/form-data"
            style="display: inline;">
            {{!-- <input type="file" name="proofOfDelivery" required> --}}
            <button type="submit">Mark as Delivered</button>
          </form>
        </li>
        {{/each}}
        {{else}}
        <li class="no-orders">No picked-up orders at this time.</li>
        {{/if}}
      </ul>
    </div>
  </div>
</body>

</html>