<!DOCTYPE html>
<html>

<head>
  <title>Available Orders</title>
  <style>
    .order {
      border: 1px solid #ddd;
      padding: 15px;
      margin: 10px 0;
    }

    button {
      background: #28a745;
      color: white;
      padding: 5px 10px;
      border: none;
    }
  </style>
</head>

<body>
  <h1>Available Orders</h1>
  {{#each orders}}
  <div class="order">
    <h3>{{this.customerName}}</h3>
    <p>{{this.deliveryAddress}}</p>
    <form method="POST" action="/driver/orders/claim/{{this._id}}">
      <button type="submit">Claim Order</button>
    </form>
  </div>
  {{else}}
  <p>No orders available</p>
  {{/each}}
</body>

</html>